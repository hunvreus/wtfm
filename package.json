{
  "scripts": {
    "build": "npm run css && npm run alpine",
    "dev": "tailwindcss --silent -i ./src/styles.css -o ./site/styles.css --watch",
    "css": "tailwindcss -i ./src/styles.css -o ./site/styles.css --minify",
    "alpine": "cp node_modules/alpinejs/dist/cdn.min.js ./site/alpine.min.js"
  },
  "devDependencies": {
    "alpinejs": "^3.14.9"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.4",
    "tailwindcss": "^4.1.4"
  }
}
